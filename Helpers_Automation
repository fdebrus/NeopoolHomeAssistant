alias: Helper_Hydrolysis
description: ""
trigger:
  - platform: state
    entity_id:
      - input_number.set_smartpool_hydrolysis
condition: []
action:
  - service: mqtt.publish
    data:
      topic: cmnd/SmartPool/NPHydrolysis
      payload_template: "{{ states('input_number.set_smartpool_hydrolysis') }}"
mode: single

